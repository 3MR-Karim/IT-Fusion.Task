@model List<EmployeeViewModel.MVC.Models.EmployeeViewModel>

<h2>Employee List</h2>
<a href="/Employee/Create">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Join Date</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.JoinDate.ToShortDateString()</td>
                <td>@emp.Phone</td>
                <td>@emp.Gender</td>
                <td>@emp.Salary</td>
                <td>
                    <a href="/Employee/Edit/@emp.Id">Edit</a> |
                    <a href="/Employee/Delete/@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
