@model List<Employee>

@{
    ViewData["Title"] = "Employees List";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Employee</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m[0].Name)</th>
            <th>@Html.DisplayNameFor(m => m[0].JoinDate)</th>
            <th>@Html.DisplayNameFor(m => m[0].Phone)</th>
            <th>@Html.DisplayNameFor(m => m[0].Gender)</th>
            <th>@Html.DisplayNameFor(m => m[0].Salary)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.JoinDate.ToString("yyyy-MM-dd")</td>
                <td>@employee.Phone</td>
                <td>@employee.Gender</td>
                <td>@employee.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
